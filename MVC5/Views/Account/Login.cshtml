@model MVC5.ViewModels.LoginViewModel
@{
    ViewBag.Title = "登录";
}
<div style="margin-top:100px">
    <h2>@ViewBag.Title。</h2>
    <div class="row">
        <div class="col-md-6 col-md-offset-2">
            <section id="loginForm">
                @using (Html.BeginForm("Login", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                    @Html.AntiForgeryToken()                 
                    <h4>使用本地帐户登录</h4>
                    <hr />
                    
                    <div class="form-group">
                        @Html.LabelFor(m => m.EmailAddress, new { @class = "col-md-2 control-label" })
                        <div class="col-md-6">
                            @Html.TextBoxFor(m => m.EmailAddress, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.EmailAddress, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-2 control-label">密码</label>
                        <div class="col-md-6">
                            @Html.PasswordFor(m => m.PassWord, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.PassWord, "", new { @class = "text-danger" })
                            @Html.ValidationMessage("IdentityError", new { @class = "text-danger" })
                        </div>
                    </div>
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-group">
                        <div class="checkbox col-md-offset-2 col-md-4">
                            <label>
                                <input type="checkbox"> 记住密码
                            </label>                           
                        </div>

                    </div>                  
                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="登录" class="btn btn-primary" />
                        </div>
                    </div>
                    <p>
                        @Html.ActionLink("还没有账户？点此注册", "Register")
                    </p>
                    @* 在为密码重置功能启用帐户确认后启用此项
                        <p>
                            @Html.ActionLink("忘记了密码?", "ForgotPassword")
                        </p>*@
                }
            </section>
        </div>
        <div class="col-md-3">
            <section id="socialLoginForm"></section>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
